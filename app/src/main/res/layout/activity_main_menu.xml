<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00B4D8"
    tools:context=".ui.MainMenu">

    <include
        android:id="@+id/include"
        layout="@layout/header"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="148dp" />


    <View
        android:id="@+id/your_eighty_percent_layout"
        android:layout_width="288dp"
        android:layout_height="185dp"
        android:layout_marginTop="248dp"
        android:layout_weight="0.5"
        android:background="@drawable/background_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming trip"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="@+id/your_eighty_percent_layout"
        app:layout_constraintStart_toStartOf="@+id/your_eighty_percent_layout"
        app:layout_constraintTop_toTopOf="@+id/your_eighty_percent_layout" />

    <TextView
        android:id="@+id/reservationDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toBottomOf="@+id/your_eighty_percent_layout"
        app:layout_constraintStart_toStartOf="@+id/your_eighty_percent_layout"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.52" />

    <TextView
        android:id="@+id/reservationStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toBottomOf="@+id/your_eighty_percent_layout"
        app:layout_constraintEnd_toEndOf="@+id/your_eighty_percent_layout"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.52" />

    <TextView
        android:id="@+id/reservationMoreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here for more information"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@+id/your_eighty_percent_layout"
        app:layout_constraintEnd_toEndOf="@+id/your_eighty_percent_layout"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/your_eighty_percent_layout"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>